<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="right"
        android:paddingRight="60dp"
        android:text="~ Profile ~"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/baseline_account_box_24" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Tên tài khoản: "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="user123456@ "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="60dp"
                android:text="Email: "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="abc123@gmail.com "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="60dp"
                android:text="Artist: "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="60dp"
                android:text="Image: "
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#B009ED"
                android:text="Upload" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="Đổi mật khẩu?"
                android:textColor="#00BCD4"
                android:textSize="16dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/txtIsAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="right"
                android:text="Là nhà sáng tác?"
                android:textColor="#FFEB3B"
                android:textSize="16dp"
                android:textStyle="italic|bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#000000"
            android:text="Đăng xuất" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Sửa Album Button -->
        <Button
            android:id="@+id/btnAlbum1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#000000"
            android:text="Sửa Album"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp" />

        <!-- Sửa Song Button -->
        <Button
            android:id="@+id/btnSong"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#000000"
            android:text="Sửa Song"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp" />

        <!-- Sửa Style Button -->
        <Button
            android:id="@+id/btnStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#000000"
            android:text="Sửa Style"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="5dp" />
    </LinearLayout>
</LinearLayout>